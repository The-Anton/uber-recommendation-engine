  <body>
    <main>

        <div class="lg:flex">
            <div class="sm:pt-96 md:pt-96 lg:w-1/2 xl:max-w-screen-sm">
                <div class="py-12 bg-black-100 lg:bg-white flex justify-center lg:justify-start lg:px-12">
                    <div class="cursor-pointer flex items-center">
                        <div>
