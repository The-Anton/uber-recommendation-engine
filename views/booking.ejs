        @keyframes slide1 {
          0%,
          100% {
            transform: translate(0, 0);
          }
      
          50% {
            transform: translate(10px, 0);
          }
        }
      
        .slider-card {
          border-radius: 0.35rem;
          overflow: hidden;
          width: 100%;
          height: 0%;
          background-color: white;
        }
      
        .card-body {
          position: fixed;
          bottom: 0px;
          height: 0;
          min-width: 100%;
          overflow: hidden;
          display: flex;
          flex-direction: column;
          align-items: center;
          background-color: white;
          transition: top 1s;
          border-top-right-radius: 30px;
          border-top-left-radius: 30px;
          transition: all 1s;
          z-index: 0;
        }
      
        .card-text {
          color: #2b0099;
          height: 100px;
        }
      
        .card-body.transition {
          height: 60%;
          overflow-y: scroll;
          transition: all 1s;
        }
      
        .route-card {
          z-index: 1;
        }
      
        .place-card {
          z-index: 2;
